#!/bin/bash

echo "Please choose the installation profile:"

options=("Development (uefi)" "Development (bios)" "Quit")

select choice in "${options[@]}"; do
    case $choice in
        "Development (uefi)")
            profile=development-uefi
            break
            ;;
        "Development (bios)")
            profile=development-bios
            break
            ;;
        "Quit")
            echo "Exiting..."
            break
            ;;
        *)
            echo "Invalid option. Please try again."
            ;;
    esac
done

if [[ $choice != "Quit" ]]; then
  source ./profiles/"$profile"
fi
